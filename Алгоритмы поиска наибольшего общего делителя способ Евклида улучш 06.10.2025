    cin >> a;
    cin >> b;
    
    //Получаем абсолюты
    if (a < 0) a =- a;
    if (b < 0) b =- b;
    
    if (a == 0 && b == 0){
        cout << " НОД (0, 0), поэтому бесконенечое множество общих делителей!\n";
        return 0;
    }
    
    if (a == 0){
        cout << "НОД (" << a << "," << b << ") =" << b << ".\n";
        return 0;
    }
    if (b == 0){
        cout << "НОД (" << b << "," << a << ") =" << a << ".\n";
        return 0;
    }
    

    cout << "НОД (" << a << "," << b << ") = " << nod_mine(a, b) << ".\n";
    return 0;
}
