#include <iostream>

using namespace std;

long long nod_mine(long long a, long long b){
    long long raznost = 0;
    bool flag = false; // 0
        while (flag == false){
        
        if (a == b){
            flag = true; // 1
        }
        else if (a < b){
            raznost = b - a;
            b = a;
            a = raznost;
        }
        else{ //a != b, a > b
            raznost = a - b;
            a = b;
            b = raznost;
        }
    }
    return a; //можно и b
}

int main(){
    setlocale(LC_ALL, "Russian");
    long long a, b;
