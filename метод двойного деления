#include <iostream>
#include <cmath>

using namespace std;
int main (){
    double a,b,l,r;
    a = 16;
    b = 0;
    l = 1;
    r = a;
    int shag = 0;
    while (r-l > 0.0001)
    {
        shag++;
        b = (l + r) / 2;
        if (b * b > a)
        {
            r = b;
        }
    else
    {
        l = b;
    }
    cout << shag;
    cout << " ";
    cout << b << endl;
    }
    cout << b << endl;
    return 0;
}
